
@{
    ViewBag.Title = "AddNewProduct";
}

<div ng-app="MyApp" ng-controller="ProductController">
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">Product</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="../Product/ListView">List View</a></li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">


                <div class="row">

                    <div class="col-md-3">
                        <div class="form-group">
                            <h2>Product Name</h2>
                            <input type="text" ng-model="ProductDAO.ProductName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <h2>Product Description</h2>
                            <input type="text" ng-model="ProductDAO.ProductDescription" class="form-control" />
                        </div>
                        <div class="form-group">
                            <h2>Product Price</h2>
                            <input type="text" ng-model="ProductDAO.ProductPrice" class="form-control" />
                        </div>
                        <div class="form-group">
                            <h2>Product Stock</h2>
                            <input type="text" ng-model="ProductDAO.ProductStock" class="form-control" />
                        </div>
                        <div class="form-group">
                            <h2>Product Category</h2>
                            <input type="text" ng-model="ProductDAO.ProductCategory" class="form-control" />
                        </div>
                        <div class="form-group">
                            <h2>Product Weight</h2>
                            <input type="text" ng-model="ProductDAO.ProductWeight" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="row">

                    <div class="col-md-3">
                        <input type="button" ng-click="SaveData()" class="btn btn-primary" value="{{btnSaveText}}" />
                    </div>
                </div>



            </div>
        </section>
    </div>
</div>

<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/AngularController/ProductControllerJS.js"></script>


